@import 'bootstrap';
@import 'font-awesome';
@import 'font-awesome-sprockets';
@import url('https://fonts.googleapis.com/css?family=Questrial');

$light-shades: #ECEAE3;
$light-accent: #85A394;
$dark-accent: #9C712E;
$dark-shades: #1C2826;

$brand-color: #5FC10C;
$brand-color-hover: #6fc724;
$brand-color-dark: #55ad0a;
$brand-color-light: #8fd354;

$twitter-color: #00acee;

.navbar{
  background-color: $brand-color;
  box-shadow: 0px 4px 10px rgba(0,0,0,0.1);

  .navbar-brand{
    font-size: 1.8rem;
  }

  .navbar-nav{
    margin-left: auto;
    margin-right: 0;
    .nav-link{
      color: #f0f0f0;
      font-size: 1rem;
      &:hover{
        color: #fff;
      }
    }
  }
}

body{
  padding-top: 48px;
  font-family: "Questrial", sans-serif;
  background-color: $light-shades;
  color: $dark-shades;
}

.logo-font{
  font-family: "Questrial", sans-serif;
}

.notice{
  margin: 0px;
  padding: 0px;
}

.alert{
  margin: 0px;
  padding: 0px;
}

.jumbotron{
  background-color: #fcfcfa;
}

.jumbotron.jumbotron-fluid.jumbotron-image{
  background-image: url(<%= asset_path("landing_background") %>);
  background-size: cover;
  background-color: rgba(0,0,40,0.4)
}

.full-height{
  height: 600px;
}

.landing{
  margin: 120px 5px 5px 25px;
  h1{
    margin-bottom: 100px;
  }
  .lead{
    font-size: normal;
  }
  color: #fff;
}

.container-landing{
  background-color: rgba(255,255,255,0.9)
}

.wider-margintop{
  margin-top: 15px;
}

/* show user */
.usericon{
  border-radius: 50%;
}

.user-info{
  padding: 10px 10px 10px 10px;
  margin-top: 30px;
  border-radius: 10px;
  background-color: #fcfcfc;

  .usericon{
    float: left;
    margin-right: 10px;
  }

  .screen_name{
    color: $dark-accent;
  }

  h3{
    margin: 2px 0px 0px 0px;
  }

  .stat-label{
    font-size: x-small;
  }

  .nweet-stats{
    font-size: x-large;
    margin-right: 3px;
    color: $brand-color;
    font-weight: bold;
  }

  .user_links{
    a{
      text-decoration: none;
      color: $brand-color;
    }
    i{
      color: $dark-shades;
    }
  }
}

.handle_name{
  padding-right: 5px;
  a {
    text-decoration: none;
    color: $dark-shades;
  }
}

.screen_name{
  font-size: 12px;
  font-weight: normal;
  font-family: "Questrial", sans-serif;
  color: $dark-accent;

  a{
    text-decoration: none;
    color: $dark-accent;
  }
}

/* feed */
.nweet-feed{
  width: 100%;
  border-radius: 10px;
  background-color: #fcfcfc;

  .nweet-count{
    border-bottom: $light-accent, 1px, solid;
    font-size: small;
    text-align: right;
    color: $dark-accent;
  }

  .nweets-list{
    list-style: none;
    padding: 0px 5px 0px 5px;
  }

  .nweet{
    padding: 15px 0px 0px 10px;
    margin-right: 30px;
    display: block;
    border-bottom: 1px solid #eee;

    .content{
      font-size: normal;
      padding-bottom: 20px;
      overflow: hidden;
    }

    .quote {
      padding: 6px 0px 6px 16px;
      margin: 0px 0px 10px 0px;
      box-sizing: border-box;
      font-style: italic;
      color: #444;
      border-left: 1px solid $brand-color-light;

      a{
        color: $brand-color;
      }
    }

    .timestamp{
      text-align: right;
      font-size: small;
      color: #aaaaaa;
      margin-bottom: 0px;
      padding: 0px 0px 10px 0px;
    }

    .maincontent{
      padding-bottom: 15px;
    }

    .user_info{
      margin-top: 5px;
      margin-bottom: 10px;
      border-bottom: $light-accent, 1px, solid;
      display: block;
      font-weight: bold;
    }

    .usericon {
      float: left;
      margin-right: 1em;
      margin-top: 5px;
      img {
        width: 100%;
        object-fit: cover;
      }
    }

    a.nweet-delete{
      color: inherit;
      margin-right: 3px;
    }
  }
}

.registration_button{
  margin-top: 1em;
  margin-bottom: 1em;
}

.btn-brandcolor{
  background-color: $brand-color;
  color: white;

  &:hover{
    background-color: $brand-color-dark;
    color: white;
  }
}

.btn-twitter{
  background-color: $twitter-color;
  color: white;
  &:hover{
    color: white;
    background-color: #00a2e0;
  }
}

.btn-nuita {
  // ボタンの幅が飛び出るのでどうにかしたい
  font-size: larger;
  margin: 30px auto;
  padding: 10px 10px 10px 10px;
  border-radius: 10px;
  text-decoration: none;
  background-color: $brand-color;/*ボタン色*/
  color: #fff;
  border-bottom: solid 3px #627295;
  border-radius: 2px;
  &:hover {
    background-color: $brand-color-hover;
    color: #fff;
  }
  &:active {
    /*ボタンを押したとき*/
    box-shadow: 0px 0px 1px rgba(0, 0, 0, 0.2);/*影を小さく*/
    border-bottom: none;
  }
  &:disabled{
    transition: all 0.2s;
    background-color: #aaaaaa ;/*ボタン色*/
    color: #fff;
    &:hover{
      color: #fff;
    }
  }
}

.btn-link{
  color: $brand-color;
}

.btn-edit{
  margin-top: 10px;
}

.row_top{
  margin: 30px auto;
}

/* edit */
.statement {
  margin: 10px 0px;
  padding: 10px 0px;
	border: 1px solid $brand-color-light;
	border-radius: 10px;
	width: 100%;
  resize: none;

  &:focus {
    border: 2px solid $brand-color-light;
    outline: 0;
  }
}

.statement-label {

}

textarea{
  resize: none;
}

/* footer */
footer{
  .text-muted{
    a{
      color: $dark-accent;
    }
  }
}
