@import 'bootstrap';
@import 'font-awesome';
@import 'font-awesome-sprockets';
@import url('https://fonts.googleapis.com/css?family=Questrial');

$light-shades: #ECEAE3;
$light-accent: #85A394;
$dark-accent: #9C712E;
$dark-shades: #1C2826;

$brand-color: #5FC10C;
$brand-color-hover: #6fc724;
$brand-color-dark: #55ad0a;
$brand-color-light: #8fd354;
$brand-color-white: #EFF8E6;

$twitter-color: #00acee;

$fav-color: #c73b31;
$fav-color-light: #aa544e;

.navbar{
  background-color: $brand-color;
  box-shadow: 0px 4px 10px rgba(0,0,0,0.1);
  height: 56px;

  .navbar-brand{
    font-size: 1rem;
  }

  .navbar-nav{
    margin-left: auto;
    margin-right: 0;
    .nav-link{
      color: #f0f0f0;
      font-size: 1rem;
      &:hover{
        color: #fff;
      }
    }
  }

  .navbar-center{
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    top: -2px;
  }

  .dropdown-menu{
    background-color: $brand-color;
    transform: translateX(-50%);
  }

  .dropdown-item{
    background-color: $brand-color;
    &:hover{
      background-color: $brand-color-hover;
    }
    &:active{
      background-color: $brand-color-hover;
    }
  }

  .mode-nav{
    font-size: 1.4rem;
    box-sizing: border-box;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);

    li{
      padding-right: 1rem;

      a{
        color: white;
        &:hover{
          color: $brand-color-white;
          transition-duration: 0.2s;
        }
      }
    }

  }

  #navbarNav{
    margin-left: auto;
    margin-right: 0px;
    position: inherit;
    #navbarDropdownMenuLink{
      text-align: right;
    }
  }
}

@media screen and (max-width: 575px){
  .navbar{
    #navbarNav{
      position: absolute;
      right: 8px;
      top: 0;
      #navbarDropdownMenuLink{
        text-align: right;
      }
    }

    .dropdown-menu{
      transform: none;
    }
  }
}

body{
  padding-top: 48px;
  font-family: "Questrial", sans-serif;
  background-color: $light-shades;
  color: $dark-shades;
}

.logo-font{
  font-family: "Questrial", sans-serif;
}

.notice{
  margin: 0px;
  padding: 0px;
}

.alert{
  margin: 0px;
  padding: 0px;
}

.jumbotron{
  background-color: #fcfcfa;
}

.jumbotron.jumbotron-fluid.jumbotron-image{
  background-image: url(<%= asset_path("landing_background") %>);
  background-size: cover;
  background-color: rgba(0,0,40,0.4)
}

.full-height{
  height: 600px;
}

.landing{
  margin: 120px 5px 5px 25px;
  h1{
    margin-bottom: 100px;
  }
  .lead{
    font-size: normal;
  }
  color: #fff;
}

.container-landing{
  background-color: rgba(255,255,255,0.9)
}

.wider-margintop{
  margin-top: 15px;
}

/* show user */
.usericon{
  border-radius: 50%;
}

.user-info{
  padding: 10px 10px 10px 10px;
  margin-top: 30px;
  border-radius: 10px;
  background-color: #fcfcfc;

  .usericon{
    float: left;
    margin-right: 10px;
  }

  .screen_name{
    color: $dark-accent;
    padding-bottom: 0.4rem;
  }

  h3{
    margin: 2px 0px 0px 0px;
  }

  ul.user_stats{
    box-sizing: border-box;
    padding-left: 0px;

    li{
      list-style: none;
      float: left;
      line-height: 1.5rem;
      margin-right: 1rem;
      a{
        .nweet-stats{
          font-size: x-large;
          color: $brand-color;
          font-weight: bold;
          &:hover{
            color: $brand-color-hover;
          }
        }
        .stat-label{
          font-size: x-small;
          color: black;
        }
        text-decoration: none;
      }
    }
  }

  .user_links{
    clear: both;
    a{
      text-decoration: none;
      color: $brand-color;
    }
    i{
      color: $dark-shades;
    }
    box-sizing: border-box;
    padding-left: 0px;
  }
}

.handle_name{
  padding-right: 5px;
  a {
    text-decoration: none;
    color: $dark-shades;
  }
}

.screen_name{
  font-size: 12px;
  font-weight: normal;
  font-family: "Questrial", sans-serif;
  color: $dark-accent;

  a{
    text-decoration: none;
    color: $dark-accent;
  }
}

.flash-container{
  padding-top: 1rem;
  padding-bottom: 0px;
  margin-bottom: 0px;
}

/* feed */
.nweet-feed{
  width: 100%;
  border-radius: 10px;
  background-color: #fcfcfc;

  .nweet-count{
    border-bottom: $light-accent, 1px, solid;
    font-size: small;
    text-align: right;
    color: $dark-accent;
  }

  .nweets-list{
    list-style: none;
    padding: 0px 0rem 0px 1rem;
  }

  .nweet{
    padding: 15px 0px 0px 0px;
    margin-right: 10px;
    display: block;
    border-bottom: 1px solid #eee;

    .content{
      font-size: normal;
      padding-bottom: 20px;
    }

    .quote {
      box-sizing: border-box;
      word-break: break-all;
      padding-left: 0.4rem;
      box-sizing: border-box;
      font-style: italic;
      color: #444;
      border-left: 1px solid $brand-color-light;

      a{
        color: $brand-color;
      }
    }

    .timestamp{
      font-size: small;
      color: #aaaaaa;
      margin-bottom: 0px;
      padding: 0px 0px 10px 0px;

      .fav-btn{
        margin: 0;
        a{
          color: #aaa;
          &:hover{
            color: $fav-color;
          }
        }

        #fav-flash{
          font-size: x-small;
          padding-left: 0.25rem;
        }
        .faved-flash{
          color: $fav-color;
        }
      }

      i.faved{
        color: $fav-color;
        &:hover{
          color: $fav-color-light;
        }
      }

      .text-right{
        line-height: 1rem;
      }
    }

    .maincontent{
      padding-bottom: 10px;
    }

    .user_info{
      margin-top: 5px;
      margin-bottom: 5px;
      border-bottom: $light-accent, 1px, solid;
      display: block;
      font-weight: bold;
    }

    .usericon {
      float: left;
      margin-right: 1em;
      margin-top: 5px;
      img {
        width: 100%;
        object-fit: cover;
      }
    }

    a.nweet-delete{
      color: inherit;
      margin-right: 3px;
    }
  }
}

@media screen and (min-width: 480px) {
  .nweet-feed{
    .nweet{
      margin-right: 30px;

      .quote{
        padding-left: 1rem;
      }
    }

    .right{
      overflow: hidden;
    }
  }
}


.registration_button{
  margin-top: 1em;
  margin-bottom: 1em;
}

.btn-brandcolor{
  background-color: $brand-color;
  color: white;

  &:hover{
    background-color: $brand-color-dark;
    color: white;
  }
}

.btn-twitter{
  background-color: $twitter-color;
  color: white;
  &:hover{
    color: white;
    background-color: #00a2e0;
  }
}

.btn-nuita {
  // ボタンの幅が飛び出るのでどうにかしたい
  font-size: larger;
  margin: 30px auto;
  padding: 10px 10px 10px 10px;
  border-radius: 10px;
  text-decoration: none;
  background-color: $brand-color;/*ボタン色*/
  color: #fff;
  border-bottom: solid 3px #627295;
  border-radius: 2px;
  &:hover {
    background-color: $brand-color-hover;
    color: #fff;
  }
  &:active {
    /*ボタンを押したとき*/
    box-shadow: 0px 0px 1px rgba(0, 0, 0, 0.2);/*影を小さく*/
    border-bottom: none;
  }
  &:disabled{
    transition: all 0.2s;
    background-color: #aaaaaa ;/*ボタン色*/
    color: #fff;
    &:hover{
      color: #fff;
    }
  }
}

.btn-link{
  color: $brand-color;
}

.btn-edit{
  margin-top: 10px;
}

.row_top{
  margin: 30px auto;
}

/* edit */
.statement {
  margin: 10px 0px;
  padding: 10px 0px;
	border: 1px solid $brand-color-light;
	border-radius: 10px;
	width: 100%;
  resize: none;

  &:focus {
    border: 2px solid $brand-color-light;
    outline: 0;
  }
}

