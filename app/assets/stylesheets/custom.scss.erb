.btn.btn-unfollow{
  border-color: $brand-color;
  color: white;
  background-color: $brand-color;

  &:hover{
    border-color: $brand-color;
    color: $brand-color;
    background-color: white;
  }
}

.btn.btn-unfollow{
  border: 1px solid $brand-color;
  color: white;
  background-color: $brand-color;

  &:hover{
    border-color: $brand-color;
    color: $brand-color;
    background-color: white;
  }
}

.btn.btn-follow{
  border-color: $brand-color;
  color: $brand-color;
  background-color: white;

  &:hover{
    border: 1px solid $brand-color;
    color: white;
    background-color: $brand-color;
  }

  &:active{
    border: 1px solid $brand-color-light;
    color: white;
    background-color: $brand-color-light;
  }
}

/* show user */
.usericon{
  border-radius: 50%;
}

.side-section{
  padding: 10px 10px 10px 10px;
  margin-top: 30px;
  top: 77px;
  border-radius: 10px;
  background-color: #fcfcfc;

  .usericon{
    float: left;
    margin-right: 10px;
  }

  .screen_name{
    color: $dark-accent;
    padding-bottom: 0.4rem;
  }

  h3{
    margin: 2px 0px 0px 0px;
  }

  h3.handle_name{
    font-size: 1.25rem;
    padding: 0px;
  }

  a{
    text-decoration: none;
    color: inherit;
  }

  .badge-brand{
    background-color: $brand-color;
    color: #fff;
    font-size: 1rem;

    &:hover{
      background-color: $brand-color-hover;
    }
  }

  .badge-brand.active{
    background-color: #fff;
    color: $brand-color;
    position: relative;

    &:after{
      border: 1px solid $brand-color;
      content: '';
      position: absolute;
      top: 0; left: 0;
      width: 100%;
      height: 100%;
      display: block;
      border: 2px solid $brand-color;
      border-radius: 10rem;

      &:hover{
        background-color: #fff;
        color: $brand-color-light;
        border: 2px solid $brand-color-light;
      }
    }
  }

  .list-group-item{
    background-color: #fcfcfc;
    padding: 0.25rem 0;
    border: none;
    &:hover{
      color: #132602;
      transition: 0.2s;
    }
  }

  .user_links{
    clear: both;
    a{
      text-decoration: none;
      color: $brand-color;
    }
    i{
      color: $dark-shades;
    }
    box-sizing: border-box;
    padding-left: 0px;
  }
}

.handle_name{
  padding-right: 5px;
  a {
    text-decoration: none;
    color: $dark-shades;
  }
}

.screen_name{
  font-size: 12px;
  font-weight: normal;
  font-family: "Questrial", sans-serif;
  color: $dark-accent;

  a{
    text-decoration: none;
    color: $dark-accent;
  }
}

.timestamp{
  font-size: x-small;
  padding-top: 10px;
  color: #aaaaaa;
  float: right;
}

.flash-container{
  padding-top: 1rem;
  padding-bottom: 0px;
  margin-bottom: 0px;
}

.label-muted{
  background-color: #eee;
  color: #999;
  font-size: small;
  padding: 0.25rem;
  border-radius: 0.3rem;
}

.badge-tag{
  background-color: #fcfcfc;
  border: 1px solid $brand-color;
  color: $brand-color;
  a{
    color: inherit;
    text-decoration: none;
  }
}

.badge-tag.active{
  background-color: $brand-color;
  color: #fff;
  a{
    color: inherit;
    text-decoration: none;

    .delete_icon{
      color: $brand-color-light;
      &:hover{
        color: white;
      }
    }
  }
}

/* feed */
.nweet-feed{
  width: 100%;
  border-radius: 10px;
  background-color: #fcfcfc;

  .nweet-count{
    border-bottom: $light-accent, 1px, solid;
    font-size: small;
    text-align: right;
    color: $dark-accent;
  }

  .nweets-list{
    list-style: none;
    padding: 0px 0rem 0px 1rem;
  }

  .nweet{
    padding: 15px 0px 0px 0px;
    margin-right: 10px;
    display: block;
    border-bottom: 1px solid #eee;

    .content{
      font-size: normal;
      padding-bottom: 5px;
    }

    .quote {
      box-sizing: border-box;
      word-break: break-all;
      padding-left: 0.4rem;
      box-sizing: border-box;
      font-style: italic;
      color: #444;
      border-left: 1px solid $brand-color-light;

      a{
        color: $brand-color;
      }
    }

    .nweet-bottom{
      margin-bottom: 0px;
      margin-top: 0.5rem;
      padding: 0;
      color: #aaaaaa;
      overflow: hidden;

      .fav-btn{
        margin: 0;

        a.btn{
          color: #aaa;
          &:hover{
            color: $fav-color;
          }
          &:focus{
            outline: none;
            box-shadow: none;
          }
          padding-left: 0;
        }

        .btn.faved{
          color: $fav-color;
          &:hover{
            color: $fav-color-light;
          }
        }

        #fav-flash{
          font-size: x-small;
          padding-left: 0.25rem;
        }
        .faved-flash{
          color: $fav-color;
        }
      }

      .text-right{
        line-height: 1rem;
      }

      .btn{
        outline: none;
        box-shadow: none;
      }
    }

    .maincontent{
      padding-bottom: 5px;
    }

    .user_info{
      margin-top: 5px;
      margin-bottom: 5px;
      border-bottom: $light-accent, 1px, solid;
      display: block;
      font-weight: bold;
    }

    .usericon {
      float: left;
      margin-right: 1em;
      margin-top: 5px;
      img {
        width: 100%;
        object-fit: cover;
      }
    }

    a.nweet-delete{
      color: #ddd;
      &:hover{
        color: #bbb;
      }
    }

    .follow-icon{
      padding-left: 0.5rem;
      font-size: small;
      color: #aaa;
      &:hover{
        color: $brand-color-hover;
      }
    }

    .follow-icon.unfollowable:hover{
      color: $fav-color-light;
    }
  }
}

@media screen and (min-width: 480px) {
  .nweet-feed{
    .nweet{
      margin-right: 30px;

      .quote{
        padding-left: 1rem;
      }
    }

    .right{
      overflow: hidden;
    }
  }
}
