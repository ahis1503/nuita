  .not-so-jumbo{
    width: 766px;
  }

  .side-section{
    .media{
      flex-direction: column;
    }
    .list-group{
      font-size: small;
    }
  }

  .label-calendar{
    font-size: small;
  }
}

.section-title{
  font-size: small;
}

.registration_button{
  margin-top: 1em;
  margin-bottom: 1em;
}

.btn-brandcolor{
  background-color: $brand-color;
  color: white;

  &:hover{
    background-color: $brand-color-dark;
    color: white;
  }
}

.btn-twitter{
  background-color: $twitter-color;
  color: white;
  &:hover{
    color: white;
    background-color: #00a2e0;
  }
}

.btn.btn-block.btn-nuita {
  font-size: larger;
  margin: 30px auto;
  padding: 10px 30px 10px 30px;
  border-radius: 10px;
  text-decoration: none;
  background-color: $brand-color;/*ボタン色*/
  color: #fff;
  border-bottom: solid 3px #627295;
  border-radius: 2px;
  &:hover {
    background-color: $brand-color-hover;
    color: #fff;
  }
  &:active {
    /*ボタンを押したとき*/
    box-shadow: 0px 0px 1px rgba(0, 0, 0, 0.2);/*影を小さく*/
    border-bottom: none;
  }
  &:disabled{
    transition: all 0.2s;
    background-color: #aaaaaa ;/*ボタン色*/
    color: #fff;
    &:hover{
      color: #fff;
    }
  }
}

.btn-link{
  color: $brand-color;
}

.btn-edit{
  margin-top: 10px;
}

.row_top{
  margin: 30px auto;
}

/* edit */
.statement {
  margin: 10px auto;
	border: 1px solid $brand-color-light;
	border-radius: 10px;
	width: 100%;
  resize: none;

  &:focus {
    border: 2px solid $brand-color-light;
    outline: 0;
  }
}

.statement-label {

}

textarea{
  resize: none;
}

a.card{
  text-decoration: none;
  color: inherit;
}

/* contribution graph */
.table-contribution{
  font-size: x-small;
  margin: 0 auto;
  border-collapse: separate;
  border-spacing: 1px;

  td{
    width: 1.5rem;
    height: 1.5rem;
    margin: 0px;
    padding: 0px;
    border: 2px solid #fcfcfc;
    background-color: $contribution-color-more;

    a{
      width: 100%;
      height: 100%;
      display: block;
    }

    &:hover{
      border: 2px;
    }
  }
  td.val-1{
    background-color: $contribution-color-one;
  }
  td.val-0{
    background-color: $contribution-color-zero;
    &:hover{
      border: 2px solid #fcfcfc;
    }
  }

  td.active{
    border: 4px;
  }

  tr{
    margin: 0;
  }
}

h3.label-calendar{
  font-size: normal;
}

/* footer */
footer{
  .text-muted{
    a{
      color: $dark-accent;
    }
  }
}

/* utility */
.bg-brand{
  background-color: $brand-color;
  border-color: $brand-color-dark;

  &:hover{
    background-color: $brand-color-dark;
    border-color: $brand-color-dark;
  }

  &:active{
    background-color: $brand-color-light;
    border-color: $brand-color;
  }
}
