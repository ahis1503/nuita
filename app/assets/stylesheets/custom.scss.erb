@import 'bootstrap';
@import 'bootstrap-sprockets';
@import 'font-awesome';
@import 'font-awesome-sprockets';
@import url('https://fonts.googleapis.com/css?family=Questrial');

$light-shades: #ECEAE3;
$light-accent: #85A394;
$brand-color: #5FC10C;
$brand-color-hover: #6fc724;
$brand-color-dark: #55ad0a;
$brand-color-light: #8fd354;

$dark-accent: #9C712E;
$dark-shades: #1C2826;

.navbar-inverse { background-color: #5FC10C}
.navbar-inverse .navbar-nav>.active>a:hover,.navbar-inverse .navbar-nav>li>a:hover, .navbar-inverse .navbar-nav>li>a:focus { background-color: #6AD70E}
.navbar-inverse .navbar-nav>.active>a,.navbar-inverse .navbar-nav>.open>a,.navbar-inverse .navbar-nav>.open>a, .navbar-inverse .navbar-nav>.open>a:hover,.navbar-inverse .navbar-nav>.open>a, .navbar-inverse .navbar-nav>.open>a:hover, .navbar-inverse .navbar-nav>.open>a:focus { background-color: #6AD70E}
.dropdown-menu { background-color: #55AD0A}
.dropdown-menu>li>a:hover, .dropdown-menu>li>a:focus { background-color: #6FC724}
.navbar-inverse { background-image: none; }
.dropdown-menu>li>a:hover, .dropdown-menu>li>a:focus { background-image: none; }
.navbar-inverse {
  box-shadow: 0px 0.2px 2px gray;
}
.navbar-inverse .navbar-brand { color: #fff}
.navbar-inverse .navbar-brand:hover { color: #FFFFFF}
.navbar-inverse .navbar-nav>li>a { color: $light-shades}
.navbar-inverse .navbar-nav>li>a:hover, .navbar-inverse .navbar-nav>li>a:focus { color: #FFFFFF}
.navbar-inverse .navbar-nav>.active>a,.navbar-inverse .navbar-nav>.open>a, .navbar-inverse .navbar-nav>.open>a:hover, .navbar-inverse .navbar-nav>.open>a:focus { color: #FFFFFF}
.navbar-inverse .navbar-nav>.active>a:hover, .navbar-inverse .navbar-nav>.active>a:focus { color: #FFFFFF}
.dropdown-menu>li>a { color: #F8F6F5}
.dropdown-menu>li>a:hover, .dropdown-menu>li>a:focus { color: #FFFFFF}
.navbar-inverse .navbar-nav>.dropdown>a .caret { border-top-color: #F8F6F5}
.navbar-inverse .navbar-nav>.dropdown>a:hover .caret { border-top-color: #FFFFFF}
.navbar-inverse .navbar-nav>.dropdown>a .caret { border-bottom-color: #F8F6F5}
.navbar-inverse .navbar-nav>.dropdown>a:hover .caret { border-bottom-color: #FFFFFF}

body{
  padding-top: 48px;
  font-family: "Questrial", sans-serif;
  background-color: $light-shades;
  color: $dark-shades;
}

.logo-font{
  font-family: "Questrial", sans-serif;
}

.navbar{
  margin: 0px;
}

.navbar-brand{
  font-size: 3rem;
  font-family: "Questrial", sans-serif;
}

.notice{
  margin: 0px;
  padding: 0px;
}

.alert{
  margin: 0px;
  padding: 0px;
}

.jumbotron{
  background-color: #fcfcfa;
}

.jumbotron.jumbotron-fluid.jumbotron-image{
  background-image: url(<%= asset_path("landing_background") %>);
  background-size: cover;
  background-color: rgba(0,0,40,0.4)
}

.full-height{
  height: 600px;
}

.landing{
  margin: 120px 5px 5px 25px;
  h1{
    margin-bottom: 100px;
  }
  .lead{
    font-size: normal;
  }
  color: #fff;
}

.container-landing{
  background-color: rgba(255,255,255,0.9)
}

.wider-margintop{
  margin-top: 15px;
}

/* show user */
.usericon{
  border-radius: 50%;
}

.user-info{
  padding: 10px 10px 10px 10px;
  margin-top: 30px;
  border-radius: 10px;
  background-color: #fcfcfc;

  .usericon{
    float: left;
    margin-right: 10px;
  }

  .screen_name{
    color: $dark-accent;
  }

  h3{
    margin: 2px 0px 0px 0px;
  }

  .stat-label{
    font-size: x-small;
  }

  .nweet-stats{
    font-size: x-large;
    margin-right: 3px;
    color: $brand-color;
    font-weight: bold;
  }
}

.handle_name{
  padding-right: 5px;
  a {
    text-decoration: none;
    color: $dark-shades;
  }
}

.screen_name{
  font-size: 12px;
  font-weight: normal;
  font-family: "Questrial", sans-serif;
  color: $dark-accent;

  a{
    text-decoration: none;
    color: $dark-accent;
  }
}

/* feed */
.nweet-feed{
  width: 100%;
  padding: 10px 10px 10px 0px;
  margin: 30px 10px 10px 10px;
  border-radius: 10px;
  background-color: #fcfcfc;

  .nweet-count{
    border-bottom: $light-accent, 1px, solid;
    font-size: small;
    text-align: right;
    color: $dark-accent;
  }

  .nweets-list{
    list-style: none;
    padding: 0px 15px 0px 35px;
  }

  .nweet{
    padding: 25px 0px 0px 10px;
    margin-right: 30px;
    display: block;
    border-bottom: 1px solid #eee;

    .content{
      font-size: normal;
      padding-bottom: 20px;
      overflow: hidden;
    }

    .quote {
      padding: 6px 0px 6px 16px;
      margin: 0px 0px 10px 0px;
      box-sizing: border-box;
      font-style: italic;
      color: #444;
      border-left: 1px solid $brand-color-light;

      a{
        color: $brand-color;
      }
    }

    .timestamp{
      text-align: right;
      font-size: x-small;
      color: #aaaaaa;
      margin-bottom: 0px;
      padding: 0px 0px 10px 0px;
    }

    .maincontent{
      padding-bottom: 15px;
    }

    .user_info{
      margin-top: 5px;
      margin-bottom: 10px;
      border-bottom: $light-accent, 1px, solid;
      display: block;
      font-weight: bold;
    }

    .usericon {
      float: left;
      margin-right: 20px;
      margin-top: 5px;
      img {
        width: 100%;
        object-fit: cover;
      }
    }
  }
}

.registration_button{
  margin-top: 1em;
  margin-bottom: 1em;
}

.btn-nuita {
  // ボタンの幅が飛び出るのでどうにかしたい
  font-size: larger;
  margin: 30px 10px 20px 10px;
  padding: 10px 10px 10px 10px;
  border-radius: 10px;
  text-decoration: none;
  background-color: $brand-color;/*ボタン色*/
  color: #fff;
  border-bottom: solid 3px #627295;
  border-radius: 2px;
  &:hover {
    background-color: $brand-color-hover;
    color: #fff;
  }
  &:active {
    /*ボタンを押したとき*/
    box-shadow: 0px 0px 1px rgba(0, 0, 0, 0.2);/*影を小さく*/
    border-bottom: none;
  }
  &:disabled{
    transition: all 0.2s;
    background-color: #aaaaaa ;/*ボタン色*/
    color: #fff;
    &:hover{
      color: #fff;
    }
  }
}

.btn-edit{
  margin-top: 10px;
}

/* edit */
.statement {
  margin: 10px 10px 10px 10px;
  padding: 10px 10px 10px 10px;
	border: 1px solid $brand-color-light;
	border-radius: 10px;
	width: 100%;
  resize: none;

  &:focus {
    border: 2px solid $brand-color-light;
    outline: 0;
  }
}

.statement-label {
  margin: 10px 10px 0px 5px;
  padding: 10px 10px 0px 5px;
}

/* footer */
footer{
  .text-muted{
    a{
      color: $dark-accent;
    }
  }
}
